<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.engage.simonnewham.engageapp.activities.ContentActivity"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />

    <TextView
        android:id="@+id/titleFixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Title Location"
        android:paddingTop="10dp"
        android:padding="4dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dateFixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Location"
        android:textColor="@color/colorPrimary"
        android:padding="4dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"/>


    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_weight="0.8"

        >

    </FrameLayout>

    <Button
        android:id="@+id/surveyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:onClick="loadSurvey"
        android:text="Answer Survey >>"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_gravity="bottom"

        />

</LinearLayout>
